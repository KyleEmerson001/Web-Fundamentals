@{
    ViewData["Title"] = "Home Page";
}
<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
<div class="text-center">
    <h1 class="display-4">Add a new Dish!</h1>
    @model Dish
    <form action="create" method="post">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Name of Dish</label>
                    <input type="text" asp-for="DishName" class="form-control">
                    <span asp-validation-for="DishName"class="text-danger"></span>
                </div>
					<div class="form-group">
                    <label># of Calories</label>
                    <input type="number" asp-for="Calories" class="form-control">
                    <span asp-validation-for="Calories"class="text-danger"></span>
                </div>		
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" asp-for="Description" class="form-control">
                    <span asp-validation-for="Description"class="text-danger"></span>
                </div>		
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Chef's Name</label>

                    <select asp-for="ChefId" class="form-control">
                                @{
                    foreach(var c in ViewBag.All)
                    {
                       <option value="@c.ChefId">@c.FirstName @c.LastName</option>
                    }
                }
                    </select>

                    <span asp-validation-for="ChefId"class="text-danger"></span>
                </div>
				<input type="submit" value="Add Dish" class="btn btn-outline-success">
			</div>
			<div class="col-sm-4">
                				 <div class="form-group">
                    <label>Tastiness</label>
					<select type="number" asp-for="Tastiness" class="form-control">
						<option value=""></option>
						<option value=1>1</option>
						<option value=2>2</option>
						<option value=3>3</option>
						<option value=4>4</option>
						<option value=5>5</option>
					</select>
                    <span asp-validation-for="Tastiness"class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>