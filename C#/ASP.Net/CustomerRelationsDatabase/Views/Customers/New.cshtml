@{
    ViewData["Title"] = "Home Page";
}
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Customer Information</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

<a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Success">Dashboard</a>
                                <form asp-controller="Home" asp-action="Logout" method="POST">
                                    <button class="btn btn-link">Log Out</button>
                                </form>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
@model Customer

<div>
  <form asp-controller="Customers" asp-action="Create" class="shadow p-3 rounded" method="POST">
    <div class="form-group">
      <label asp-for="FirstName"></label>
      <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
      <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="LastName"></label>
      <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
      <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="PhoneNumber"></label>
      <span asp-validation-for="PhoneNumber" class="text-danger font-weight-bold"></span>
      <input asp-for="PhoneNumber" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Email"></label>
      <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
      <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Address"></label>
      <span asp-validation-for="Address" class="text-danger font-weight-bold"></span>
      <input asp-for="Address" class="form-control">
    </div>

    <button class="btn btn-outline-success">Submit</button>
  </form>
</div>