@{
    ViewData["Title"] = "Home Page";
}
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Call Information</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

<a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Success">Dashboard</a>
                                <form asp-controller="Home" asp-action="Logout" method="POST">
                                    <button class="btn btn-link">Log Out</button>
                                </form>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
@model CustomerCall

<div>
  <form asp-controller="Customers" asp-action="CallCreate" class="shadow p-3 rounded" method="POST">
    <div class="form-group">

    <div class="form-group">
      <label asp-for="CallDate"></label>
      <span asp-validation-for="CallDate" class="text-danger font-weight-bold"></span>
      <input asp-for="CallDate" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="IssueReported"></label>
      <span asp-validation-for="IssueReported" class="text-danger font-weight-bold"></span>
      <input asp-for="IssueReported" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="IssueDescription"></label>
      <span asp-validation-for="IssueDescription" class="text-danger font-weight-bold"></span>
      <input asp-for="IssueDescription" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="IssueResolution"></label>
      <span asp-validation-for="IssueResolution" class="text-danger font-weight-bold"></span>
      <input asp-for="IssueResolution" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="FollowUp"></label>
      <span asp-validation-for="FollowUp" class="text-danger font-weight-bold"></span>
      <input asp-for="FollowUp" class="form-control">
    </div>



    <button class="btn btn-outline-success">Submit</button>
  </form>
</div>